uses <bf>
uses <crt>
uses <threads>

proc MyThread(.ThreadContext, .Arg):
  var text = new(.Arg)
  while true:
    println(text)
    sleep(1000)
    gc
  end
end

proc main():
  var Thr = async(MyThread, "Threaded hello!")

  while true:
    println("Hello from main thread!")
    sleep(1000)
    gc
  end
end
